[Unit]
Description=agentgw Autonomous Agent Framework
After=network.target

[Service]
Type=simple
User=agentgw
Group=agentgw
WorkingDirectory=/opt/agentgw
Environment="PATH=/opt/agentgw/.venv/bin"
EnvironmentFile=/opt/agentgw/.env
ExecStart=/opt/agentgw/.venv/bin/agentgw serve --host 0.0.0.0 --port 8080 --pidfile /var/run/agentgw.pid
PIDFile=/var/run/agentgw.pid
Restart=on-failure
RestartSec=5s

# Graceful shutdown
KillSignal=SIGTERM
TimeoutStopSec=30

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/agentgw/data /var/run

[Install]
WantedBy=multi-user.target
